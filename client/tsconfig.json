{
  "include": ["src"],
  "compilerOptions": {
    "target": "ES2020",
    "jsx": "react-jsx",

    "lib": ["DOM", "DOM.Iterable", "ES2020"],

    "module": "ESNext",
    "moduleResolution": "Bundler",

    "types": ["react", "react-dom"],

    "strict": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
